#include <iostream>
#include <algorithm>
#include <vector>

using namespace std;

int main(){
	int n;
	cin >> n;
	vector<pair<int, int>> a(n);
	vector<int> ans(n);
	for(int i = 0; i < n; i++)
		cin >> a[i].first >> a[i].second;
	sort(a.begin(), a.end());
	int lvl = 0, cure1, cure2;
	for(int i = 0, svdbgn = 0; i < n - 1; i++){
		if(a[i+1].first <= a[i].second){
			lvl++;
			cure1 = ans[lvl];
			cure2 = min(a[i].second, a[i+1].second) - a[i+1].first;
			ans[lvl] = max(cure1, cure2);
		}
		else {
			i -= lvl;
			lvl = 0;
		}
	}
	sort(ans.begin(), ans.end());
	cout << ans[ans.size() - 1];
	return 0;
}
