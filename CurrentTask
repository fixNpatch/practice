#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main(){
	int n;
	cin >> n;
	vector<pair<int, char>> a(n * 2);
	vector<int> ans (n);
	for(int i = 0; i < n; i++)
		ans[i] = 0;
	for(int i = 0; i < n * 2; i++){
			cin >> a[i].first;
			(i%2 == 0) ? a[i].second = 'b' : a[i].second = 'e';  
	}
	sort(a.begin(), a.end());
	int lvl = 1;
	for(int i = 0; i < n * 2; i++){
		if(a[i].second == 'b') {
			if((a[i-1].second == 'e')&&(a[i].first == a[i-1].first))
				ans[++lvl]--;
			else lvl++;
		}
		else{
				ans[lvl--] += a[i].first - a[i-1].first + 1;
		}
	}
	sort(ans.begin(), ans.end());
	cout << ans[n-1] << endl;
	system("pause");
	return 0;
}
